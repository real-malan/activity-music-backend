<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet id="create account table" author="malan">
        <createTable tableName="account">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="account_pkey"/>
            </column>
            <column name="modified_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create service table" author="malan">
        <createTable tableName="service">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="service_pkey"/>
            </column>
            <column name="account_id" type="bigint">
                <constraints nullable="false" references="account(id)" foreignKeyName="service_account_id_fkey"/>
            </column>
            <column name="external_id" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="source" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="access_token" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="access_token_expires_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="refresh_token" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="service" columnNames="external_id, source"
                             constraintName="service_external_id_source_key"/>
    </changeSet>

</databaseChangeLog>
